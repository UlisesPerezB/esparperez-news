<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="searchViewStyle">@style/SearchView</item>
    </style>

    <!--<style name="AppTheme.NoActionBar" parent="AppTheme">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="searchViewStyle">@style/SearchView</item>-->
    <!--</style>-->

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="EditTextPreferences">
        <item name="android:background">@drawable/edit_text_preferences</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/material_margin</item>
        <item name="android:padding">@dimen/material_default_padding</item>
        <item name="android:textSize">@dimen/text_size_h4</item>
    </style>

    <style name="ButtonPreferences" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/button_preferences</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!--<style name="toolbarStyle" parent="AppTheme.NoActionBar">-->
        <!--<item name="android:textColorPrimary">@color/colorPrimaryText</item>-->
        <!--<item name="colorControlNormal">@color/colorAccent</item>-->
    <!--</style>-->

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/edit_text_search</item>
        <item name="colorControlNormal">@color/colorDivider</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorDivider</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
